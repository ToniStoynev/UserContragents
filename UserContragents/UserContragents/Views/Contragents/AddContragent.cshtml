@model  UserContragents.Models.AddContragentBindingModel
@{
    ViewData["Title"] = "AddContragent";
}

<h1 class="text-center mt-4">Add contragent</h1>
<div class="row">
    <div class="mx-auto text-center">
        <section>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.Address"></label>
                    <input asp-for="@Model.Address" class="form-control" />
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.DDSNumber"></label>
                    <input asp-for="@Model.DDSNumber" class="form-control" />
                    <span asp-validation-for="@Model.DDSNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary font-weight-bold">Add</button>
                </div>

            </form>
        </section>
    </div>

</div>

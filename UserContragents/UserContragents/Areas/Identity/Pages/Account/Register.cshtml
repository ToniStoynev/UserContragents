@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<<h1 class="text-center mt-3">Register</h1>

<form method="post" class="mx-auto w-50">
    <hr class=" mt-3 bg-eventures hr2" />
  
    <div class="d-flex justify-content-between">

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Username" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Username" class="form-control" type="text" placeholder="First name" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Name" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Name" class="form-control" type="text" placeholder="First name" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

    </div>

    <hr class=" mt-3 bg-eventures hr2" />

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center  mx-auto text-center">
                <label asp-for="Input.Password" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex my-3 justify-content-between">
        <button type="submit" class="btn btn-outline-primary font-weight-bold mx-auto text-center">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
